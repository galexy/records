
<div class="modal hide fade" id="editFieldModal">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">Ã—</button>
    <h3>Edit field</h3>
  </div>
  <div class="modal-body">
    <form class="form-horizontal well" id="editFieldForm">
      <fieldset>
        <div class="control-group">
          <label class="control-label">Name:</label>
          <div class="controls">
            <input name="name" type="text" class="input-xlarge" placeholder="Field name"></input>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label">Heading:</label>
          <div class="controls">
            <input name="heading" type="text" class="input-xlarge" placeholder="Field heading"></input>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label">Type:</label>
          <div class="controls">
            <select name="type">
              <option value="String">String</option>
              <option value="Url">Url</option>
              <option value="Name">Name</option>
            </select>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label">Placeholder:</label>
          <div class="controls">
            <input name="placeholder" type="text" class="input-xlarge" placeholder="Field placeholder text"></input>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label">Required:</label>
          <div class="controls">
            <input name="required" type="checkbox" class="input-xlarge"></input>
          </div>
        </div>
        
        <input type="submit" style="visibility:hidden;"></input>
      </fieldset>
    </form>
  </div>
  <div class="modal-footer">
    <a href="#" id="editFieldCancel" class="btn btn-inverse">Cancel</a>
    <a href="#" id="editFieldSubmit" class="btn btn-primary" class="submit">Update</a>
  </div>
</div>
