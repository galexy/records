
<div class="modal hide fade" id="newItemModal">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">Ã—</button>
    <h3>Add new item</h3>
  </div>
  <div class="modal-body">
    <form class="form-horizontal well" id="newItemForm">
      <fieldset>
        <% metadata.fields.forEach(function(field) { %>
        <div class="control-group">
            <label class="control-label" for="input01"><%= field.heading %></label>
            <div class="controls">
              <input name="<%= field.name %>" type="<%= field.formType %>" class="input-xlarge" placeholder="<%= field.placeholder %>"></input>
            </div>
        </div>
        <% }) %>
        <input type="submit" style="visibility:hidden;"></input>
      </fieldset>
    </form>
  </div>
  <div class="modal-footer">
    <a href="#" id="addItemCancel" class="btn btn-inverse">Cancel</a>
    <a href="#" id="addItemSubmit" class="btn btn-primary" class="submit">Add Item</a>
  </div>
</div>
