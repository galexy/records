<% script = '/js/admin.js' %>
<% title = metadata.title + ' - Settings' %>

<ul class="breadcrumb" style="width: 100%">
  <li>
    <a href="/">Home</a> <span class="divider">></span>
  </li>
  <li>
    <a href="/lists">Lists</a> <span class="divider">></span>
  </li>
  <li>
    <a href="/lists/<%= list %>"><%= metadata.title %></a> <span class="divider">></span>
  </li>
  <li class="active">
    Configuration
  </li>
</ul>

<div class="container-fluid">
  <div id="admin-view">
    <div class="row-fluid">
      <%- partial('sidenav.ejs') %>

      <div class="span10">
        <div class="btn-toolbar span9" style="margin-top: 0; margin-bottom: 0;">
          <div class="btn-group">
            <btn class="btn" id="addField"><i class="icon-plus"></i> New Column</btn>
            <btn class="btn" id="save"><i class="icon-hdd"></i> Save</btn>
          </div>
        </div>
        
        <div class="row-fluid">
          <form id="details" class="form-horizontal">
            <legend>List details</legend>
            <div class="control-group">
              <label class="control-label" for="name">Name:</label>
              <div class="controls">
                <input name="name" id="name" type="text" class="input-xlarge"></input>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label" for="title">Title:</label>
              <div class="controls">
                <input name="title" id="title" type="text" class="input-xlarge"></input>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label" for="description">Description:</label>
              <div class="controls">
                <input name="description" id="description" type="textarea"></input>
              </div>
            </div>
          </form>
        </div>

        <legend>Fields</legend>
        <table class="table table-striped table-condensed">
          <thead>
            <tr>
              <th></th>
              <th>Name</th>
              <th>Heading</th>
              <th>Type</th>
              <th>Place Holder</th>
              <th>Required</th>
              <th>Default</th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
  
      <script type="template" id="fieldTemplate">
        <td><i class="icon-remove"></i></td>
        <td><a class="namefield">{{name}}</a></td>
        <td>{{heading}}</td>
        <td>{{type}}</td>
        <td>{{placeholder}}</td>
        <td>{{required}}</td>
        <td>{{default}}</td>
      </script>
  
    </div>
    
    <%- partial('newFieldModal.ejs') %>
    
  </div>
  
  <hr />
  
</div>